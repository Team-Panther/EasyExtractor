<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorSelected">#80B2EBF2</item>
    </style>

    <!-- Tema 2. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTheme2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTheme2</item>
        <item name="colorAccent">@color/colorAccentTheme2</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorSelected">#80B2EBF2</item>
    </style>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.Body1" >
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Headline" >
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Subhead" >
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Body1.Inverse" >
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="Text.Headline.Inverse" >
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Text.Subhead.Inverse" >
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

</resources>
